<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Html5 Qrcode Barcode Scanner</Title>
    <Authors>Jakub Maguza</Authors>
    <Description>This is wrapper around Html5Qrcode js library for scanning barcodes using camera</Description>
    <PackageProjectUrl>https://github.com/jakubmaguza/Html5QrcodeBlazor.Wrapper</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/jakubmaguza/Html5QrcodeBlazor.Wrapper</RepositoryUrl>
    <PackageTags>barcode;qrcode;scanner;blazor;scan-barcode;scan-qrcode;camera-scanner</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.4" />
  </ItemGroup>

</Project>
